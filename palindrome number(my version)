public class Solution {
    public boolean isPalindrome(int x) {
        long ox = x;
        long rx = 0;
        if(x<0){
            return false;
        }
        if(x<10){
            return true;
        }
        while(x>9){
            int temp = x%10;
            rx = rx*10 + temp;
            x = x/10;
        }
        rx = rx*10 + x;
        if(rx<Integer.MAX_VALUE && (int)rx == ox){
            return true;
        }
        else{
            return false;
        }
    }
}
