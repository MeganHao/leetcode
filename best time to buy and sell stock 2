public class Solution {
    public int maxProfit(int[] prices) {
        int budget = 0;
        int buy = 0;
        int sell = 1;
        if(prices.length == 1){
            return 0;
        }
        while(sell < prices.length){
            if(prices[sell] > prices[buy]){
                budget += prices[sell] - prices[buy];
                buy = sell;
                sell = sell+1;
            }
            else{
                buy = sell;
                sell++;
            }
            
        }
        return budget;
    }
}
