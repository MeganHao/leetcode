public class Solution {
    public boolean isPalindrome(String s) {
        int i = 0;
        s = s.trim().toLowerCase();//This is a easy way to clean the string
        int j = s.length()-1;
        while(i<=j){
            if(((s.charAt(i)>='a' && s.charAt(i)<='z') || (s.charAt(i)>='0' && s.charAt(i)<='9')) && ((s.charAt(j)>='a' && s.charAt(j)<='z') || (s.charAt(j)>='0' && s.charAt(j)<='9'))){//The logic is totally messed up at first
                if( s.charAt(i) != s.charAt(j)){
                    return false;
                }
                i++;
                j--;
            }
            else if((s.charAt(i)>='a' && s.charAt(i)<='z') || (s.charAt(i)>='0' && s.charAt(i)<='9')){
                j--;
            }
            else if((s.charAt(j)>='a' && s.charAt(j)<='z') || (s.charAt(j)>='0' && s.charAt(j)<='9')){
                i++;
            }
            else{
                i++;
                j--;
            }
        }
        return true;//forget to return at first
    }
}
